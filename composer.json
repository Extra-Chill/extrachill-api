{
	"name": "extrachill/extrachill-api",
	"description": "REST API infrastructure for the ExtraChill Platform multisite network",
	"version": "0.10.6",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.4",
		"endroid/qr-code": "^6.0",
		"erusev/parsedown": "^1.7",
		"league/html-to-markdown": "^5.1"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpunit/phpunit": "^9.0"
	},
	"scripts": {
		"lint:php": "vendor/bin/phpcs --standard=WordPress --extensions=php .",
		"lint:fix": "vendor/bin/phpcbf --standard=WordPress --extensions=php .",
		"test": "vendor/bin/phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
